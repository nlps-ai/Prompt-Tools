// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// 用户表
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  image     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // 关系
  prompts      Prompt[]
  userSettings UserSetting[]

  @@map("users")
}

// 提示词表 - 基于原有 SQLite 结构
model Prompt {
  id               String    @id @default(cuid())
  name             String
  source           String?
  notes            String?
  tags             String[]  // PostgreSQL 数组类型，替代原 JSON 格式
  pinned           Boolean   @default(false)
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")
  currentVersionId String?   @unique @map("current_version_id")

  // 外键关系
  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // 版本关系
  versions       Version[] @relation("PromptVersions")
  currentVersion Version?  @relation("CurrentVersion", fields: [currentVersionId], references: [id])

  // 索引优化
  @@index([userId])
  @@index([updatedAt])
  @@index([pinned])
  @@index([tags])
  @@map("prompts")
}

// 版本表 - 保持原有结构
model Version {
  id              String    @id @default(cuid())
  version         String    // 语义化版本号 (1.0.0)
  content         String
  createdAt       DateTime  @default(now()) @map("created_at")
  parentVersionId String?   @map("parent_version_id")

  // 外键关系
  promptId String @map("prompt_id")
  prompt   Prompt @relation("PromptVersions", fields: [promptId], references: [id], onDelete: Cascade)

  // 版本树关系
  parentVersion Version?  @relation("VersionHistory", fields: [parentVersionId], references: [id])
  childVersions Version[] @relation("VersionHistory")

  // 当前版本反向关系
  currentPrompt Prompt? @relation("CurrentVersion")

  @@index([promptId])
  @@index([createdAt])
  @@map("versions")
}

// 用户设置表
model UserSetting {
  id    String @id @default(cuid())
  key   String
  value String

  // 外键关系
  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, key])
  @@map("user_settings")
}

// 全局设置表 (系统级配置)
model GlobalSetting {
  key   String @id
  value String

  @@map("global_settings")
}

// 标签表 (用于标签管理和统计)
model Tag {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  color       String?
  createdAt   DateTime @default(now()) @map("created_at")
  usage_count Int      @default(0)

  @@map("tags")
}

// 审计日志表 (可选)
model AuditLog {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  action    String   // CREATE, UPDATE, DELETE
  entity    String   // PROMPT, VERSION, SETTING
  entityId  String   @map("entity_id")
  oldData   Json?    @map("old_data")
  newData   Json?    @map("new_data")
  createdAt DateTime @default(now()) @map("created_at")

  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}